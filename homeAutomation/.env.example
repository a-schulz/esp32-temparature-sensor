# Environment variables for heating system IoT infrastructure
# Copy this file to .env and update the values

# Timezone
TZ=Europe/Berlin

# WiFi Configuration (for ESP32 devices)
WIFI_SSID=your-wifi-network
WIFI_PASSWORD=your-wifi-password

# MQTT Broker
MQTT_USER=heating_system
MQTT_PASSWORD=secure_mqtt_password_2024
MQTT_ADMIN_PASSWORD=admin_password_2024

# TimescaleDB / PostgreSQL
POSTGRES_DB=homeassistant
POSTGRES_USER=homeassistant
POSTGRES_PASSWORD=ha_secure_password_2024

# Grafana
GRAFANA_DB_PASSWORD=grafana_password_2024
GRAFANA_ADMIN_PASSWORD=admin_password_2024

# Home Assistant
HA_INTERNAL_URL=http://homeassistant:8123

# Device Configuration
DEVICE_LOCATION=boiler_room
DEVICE_ID=heating_sensor_01